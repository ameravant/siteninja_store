<%- content_for(:title) { concat "New Shipping Method" } -%>

<%- content_for :crumb do -%>
  <%= link_to "Dashboard", "/admin" %> &gt;
  <%= link_to "Shipping Methods", admin_shipping_methods_path %> &gt;
  <%= yield :title %>
<%- end -%>

<h1><%= yield :title %></h1>

<% form_for :shipping_method, :url => admin_shipping_methods_path, :html => { :onsubmit => "form_submitted();" } do |f| %>
<%= render :partial => "form", :locals => { :f => f } %>
<% end %>