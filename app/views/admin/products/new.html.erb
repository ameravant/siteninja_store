<%- content_for(:title) { concat "New Product" } -%>

<%- content_for :crumb do -%>
  <%= link_to "Dashboard", "/admin" %> &gt;
  <%= link_to "Products", admin_products_path %> &gt;
  <%= yield :title %>
<%- end -%>

<h1><%= yield :title %></h1>

<% form_for :product, :url => admin_products_path, :html => { :onsubmit => "form_submitted()" } do |f| %>
<%= render :partial => "form", :locals => { :f => f } %>
<% end %>