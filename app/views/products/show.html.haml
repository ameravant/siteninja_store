%div.product
  %h1.product-title
    = @product.name
  = image_tag("#{@product.images.first.image.url(:large)}", :class => "product-image", :alt => "#{@product.name}")
  %h1.product-description Description
  %p=@product.description
  %h2.product-price
    -if @product.sale_price
      %h2.regular-price= "Price: #{number_to_currency(@product.price)}"
      %h2.sale-price.product-price= "Sale Price: #{number_to_currency(@product.sale_price)}"
    -else
      %h2.product-price= "Price: #{number_to_currency(@product.price)}"
  %br
  -if @cms_config["site_settings"]["google_merchant_id"]
    %div.googlecart-add-button{:role=>"button", :alt=>"Add to cart", :tabindex=>"0"}
    %script#googlecart-script{:type=>"text/javascript", :src=>"http://checkout.google.com/seller/gsc/v2/cart.js?mid=#{CMS_CONFIG["site_settings"]["google_merchant_id"]}", :currency=>"USD"}
  -else
    =@product.cart_code if @product.cart_code