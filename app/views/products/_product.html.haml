%li.product
  - unless product.images.blank? 
    =link_to image_tag(product.images.first.image.url(:medium), :title => product.title, :alt => product.title), product, :class => "product-image"

  %h2=link_to product.name, product
  =number_to_currency product.price, :unit => '$' unless product.price.blank?
= cycle("", "", "<li class=\"clear\"></li>")